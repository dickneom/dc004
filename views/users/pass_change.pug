extends ../layout
include ../mixins

block content
  +menu-guest

  h1 Cambio de clave

  if (error)
    p.error error

  form(action="/pass_change" method="post")
    if (email)
      input(type='text' name='email' value=email)
    else
      label(for='claveAnterior') Clave Anterior:
      input(type='text' name='claveAnterior')
    br
    label(for='clave') Clave:
    input(type='text' name='clave')
    br
    label(for='clave1') Repetir la clave:
    input(type='text' name='clave1')
    br
    input(type='submit' value="Enviar")

  +foot
